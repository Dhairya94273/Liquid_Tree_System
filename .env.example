# Environmental Monitoring Application Configuration
# 
# Copy this file to .env and fill in your actual values

# ===== Server Configuration =====
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# ===== Database Configuration =====
DATABASE_PATH=./data/pincodes.json

# ===== WAQI API Configuration (Recommended) =====
# Get your token at: https://aqicn.org/data-platform/token/
# Features: Very accurate, global coverage, 1000+ requests/day
WAQI_TOKEN=your_waqi_token_here

# ===== OpenWeatherMap API Configuration (Fallback) =====
# Get your key at: https://openweathermap.org/api
# Features: Global coverage, 1000 calls/minute free tier
OPENWEATHER_API_KEY=YOUR_API_KEY_HERE

# ===== AQICN API Configuration (Optional) =====
# Similar to WAQI, another source for AQI data
AQICN_TOKEN=your_aqicn_token_here

# ===== Scheduled Updates Configuration =====
# Enable automatic periodic AQI updates (true/false)
ENABLE_SCHEDULED_UPDATES=false

# Update interval in minutes (default: 60 = 1 hour)
UPDATE_INTERVAL_MINUTES=60

# ===== Logging Configuration =====
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

# ===== API Rate Limiting =====
# Delay between API requests in milliseconds (to avoid rate limiting)
REQUEST_DELAY_MS=1200

# ===== Caching Configuration =====
# Enable API response caching
ENABLE_API_CACHING=true

# Cache duration in milliseconds (default: 5 minutes = 300000)
CACHE_DURATION_MS=300000

# ===== Auto-Refresh Configuration =====
# Enable automatic map refresh
ENABLE_AUTO_REFRESH=true

# Auto-refresh interval in milliseconds (default: 5 minutes = 300000)
AUTO_REFRESH_INTERVAL_MS=300000

# ===== CORS Configuration =====
# Allowed origins for CORS (use * for development, specific domain for production)
CORS_ORIGIN=*

# ===== Feature Toggles =====
# Enable detailed health recommendations
ENABLE_HEALTH_RECOMMENDATIONS=true

# Enable pollutant details in popups
SHOW_POLLUTANT_DETAILS=true

# Enable location-based AQI adjustments
ENABLE_AREA_MULTIPLIER=true

